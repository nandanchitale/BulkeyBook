@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-3">
        <div class="col-9">
            <h2 class="text-bg-primary">Product List</h2>
        </div>
        <div class="col-3">
            <a asp-controller="Product" asp-action="Upsert" class="btn-primary btn ml-auto">
                <i class="bi mr-2  bi-plus-lg"></i> Create New Product
            </a>
        </div>
    </div>
</div>

<table id="productTable" class="mt-3 table table-striped table-bordered">
    <thead>
        
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Author</th>
            <th>Price</th>
            <th>Category</th>
            <th>Cover Type</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        
    </tbody>
</table>

@section Scripts{
    <script src="~/js/product.js"></script>
}