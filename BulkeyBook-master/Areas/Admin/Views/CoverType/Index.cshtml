@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-3">
        <div class="col-9">
            <h2 class="text-bg-primary">CoverType List</h2>
        </div>
        <div class="col-3">
            <a asp-controller="CoverType" asp-action="Create" class="btn-primary btn ml-auto">
                <i class="bi mr-2  bi-plus-lg"></i> Create New CoverType
            </a>
        </div>
    </div>
</div>

<table class="mt-3 table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Id
                </td>
                <td>
                    @obj.Name
                </td>
                <td>
                    <a asp-controller="CoverType" asp-action="Edit" asp-route-id ="@obj.Id"  class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                     <a asp-controller="CoverType" asp-action="Remove" asp-route-id ="@obj.Id"  class="btn btn-danger">
                        <i class="bi bi-trash"></i> Remove
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>