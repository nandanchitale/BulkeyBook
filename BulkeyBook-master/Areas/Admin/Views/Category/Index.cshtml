@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-3">
        <div class="col-9">
            <h2 class="text-bg-primary">Category List</h2>
        </div>
        <div class="col-3">
            <a asp-controller="Category" asp-action="Create" class="btn-primary btn ml-auto">
                <i class="bi mr-2  bi-plus-lg"></i> Create New Category
            </a>
        </div>
    </div>
</div>

<table class="mt-3 table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Display Order</td>
            <td>Created Date</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Id
                </td>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Remove" asp-route-id="@obj.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Remove
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>